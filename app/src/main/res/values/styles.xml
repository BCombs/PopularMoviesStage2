<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- RatingBar star colors. Information found at
    https://stackoverflow.com/questions/39060128/how-to-set-the-colors-of-android-small-ratingbar
    -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/ratingBarBackground</item>
        <item name="colorControlActivated">@color/ratingBarActivated</item>
    </style>

    <!-- Common TextView attributes in activity_detail-->
    <style name="DetailTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/detailFontColor</item>
    </style>

    <!-- Common ImageView attributes in activity_detail-->
    <style name="DetailImageView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Style for dividers on Detail Activity -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

</resources>
